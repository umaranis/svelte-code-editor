{
	"name": "@umaranis/svelte-code-editor",
	"description": "Code Editor for Svelte based on CodeMirror",
	"version": "0.0.5",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --write .",
		"prepare": "svelte-kit sync"
	},
	"exports": {
		".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
		"./styles/index.css": "./src/lib/styles/index.css",
		"./styles/codemirror.css": "./src/lib/codemirror.css"
	},
	"sideEffects": [
		"**/*.css"
	],
	"files": [
		"src",
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.20.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.3.2",
		"publint": "^0.2.12",
		"svelte": "^5.23.0",
		"svelte-check": "^4.1.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.11"
	},
	"type": "module",
	"dependencies": {
		"@lezer/highlight": "^1.2.1",
		"codemirror": "^6.0.1",
		"@codemirror/lint": "^6.8.2",
		"@codemirror/autocomplete": "^6.9.0",
		"@codemirror/commands": "^6.2.5",
		"@codemirror/lang-css": "^6.2.1",
		"@codemirror/lang-html": "^6.4.6",
		"@codemirror/lang-javascript": "^6.2.1",
		"@codemirror/language": "^6.10.3",
		"@codemirror/search": "^6.5.6",
		"@codemirror/state": "^6.5.0",
		"@codemirror/view": "^6.35.3",
		"@fontsource/atkinson-hyperlegible": "^5.1.0",
		"@fontsource/dm-serif-display": "^5.1.0",
		"@fontsource/eb-garamond": "^5.1.0",
		"@fontsource/fira-mono": "^5.1.0",
		"@fontsource/fira-sans": "^5.1.0",
		"@replit/codemirror-lang-svelte": "^6.0.0",
		"@replit/codemirror-vim": "^6.0.14",
		"esm-env": "^1.0.0",
		"tarparser": "^0.0.4"
	},
	"keywords": [
    "code",
    "editor",
    "svelte"
  ]
}
